{
    "authentication": {
        "signIn": {
            "type": "Query",
            "description": "Create an account for the user",
            "usage": "signIn(email: $email, password: $password)",
            "returns": "{ user: User, token: String }",
            "exceptions": [
                {
                    "name": "InvalidEmailException",
                    "description": "The email entered by the user is not valid",
                    "code": 1002
                },
                {
                    "name": "InvalidEmailException",
                    "description": "The email entered by the user is not valid",
                    "code": 1003
                }
            ]
        }
    },
    "projects": {
        "type": "Mutation",
        "description": "Create a new project",
        "usage": "createProject(projectInput: ProjectInput!)",
        "returns": "{ createProject: Project }",
        "exceptions": [
            {
                "name": "MissingMandatoryFieldException",
                "description": "One required project input field is missing",
                "code": 2001
            }
        ]
    },
    "tasks": {
        "createTask": {
            "type": "Mutation",
            "descrption": "Create a new task",
            "usage": "createTask(taskInput: TaskInput!)",
            "returns": "{ createTask: Task }",
            "exceptions": [
                {
                    "name": "MissingMandatoryFieldException",
                    "description": "One required task input field is missing",
                    "code": 2001
                }
            ]
        },
        "selectOneTask": {
            "type": "Query",
            "description": "Select one task by id",
            "usage": "selectOneTask(id: String!)",
            "returns": "{task: Task}"
        }
    },
    "sprint": {}
}
